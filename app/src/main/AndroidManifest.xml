<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abiyedanagogo.invasion">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.abiyedanagogo.invasion.LifecycleObserverClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2299956326616515~5252049538" />

        <activity android:name="com.abiyedanagogo.invasion.ObjectivesActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar">
        </activity>
        <activity
            android:name="com.abiyedanagogo.invasion.CreditsActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar">
        </activity>
        <activity
            android:name="com.abiyedanagogo.invasion.InstructionsActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name="com.abiyedanagogo.invasion.SettingsActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name="com.abiyedanagogo.invasion.GameActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar" />
        <activity
            android:name="com.abiyedanagogo.invasion.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.abiyedanagogo.invasion.MusicPlayerService"
            android:enabled="true" />
    </application>

</manifest>